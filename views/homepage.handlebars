
{{#if posts.length}}
<section>
    <h2> Posts</h2>
    <ul>
      <ul>
      {{#each posts as |post|}}
        <li>
          <h3>{{post.user.name}}</h3>
          <h3>{{post.title}}</h3>
          <p>{{post.content}}</p>
          <a href="/comments/post/{{post.id}}" class="comment-link">Comment</a>
        </li>
      {{/each}}
    </ul>
</section>
{{/if}}



<script src="/js/new-post.js"></script>
<script src="/js/login.js"></script>
<script src="/js/comment.js"></script>